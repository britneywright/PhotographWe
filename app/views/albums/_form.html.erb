<%= form_for album, :html => { :class => 'form-horizontal', multipart: true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :slug %>
  <%= f.text_field :slug %>
  <%= f.label :private_album %>
  <%= f.check_box :private_album %>
  <%= f.label :secret_key %>
  <%= f.text_field :secret_key %>
  <%= f.label :photographs %>
  <%= file_field_tag "photographs[]", type: :file, multiple: true %>
  <%= f.submit "Create album" %>
<% end %>
